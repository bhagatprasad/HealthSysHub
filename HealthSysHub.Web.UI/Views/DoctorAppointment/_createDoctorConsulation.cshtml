<form id="AddEditDoctorConsultationForm">
    <div class="sidebar AddEditDoctorConsultationFormSidebar" id="sidebar">
        <div class="modal-header">
            <h5 class="modal-title">Add/Edit Doctor Consultation</h5>
            <button type="button" class="close" id="closeSidebar" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Name">Patient Name</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" id="Name" placeholder="Enter Patient Name" required>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Phone">Patient Phone</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-phone"></i></span>
                            </div>
                            <input type="text" class="form-control" id="Phone" placeholder="Enter Patient Phone" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Age">Age</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" id="Age" placeholder="Enter Patient Age" required>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="AttenderPhone">Attender Phone</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-phone"></i></span>
                            </div>
                            <input type="text" class="form-control" id="AttenderPhone" placeholder="Enter Attender Phone" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Gender">Gender</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-venus-mars"></i></span>
                            </div>
                            <select class="form-control" id="Gender" required>
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Address">Address</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-home"></i></span>
                            </div>
                            <input type="text" class="form-control" id="Address" placeholder="Enter Address" required>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vital Signs Section -->
            <div class="row mt-3">
                <div class="col-12">
                    <h6 class="section-title">Vital Signs</h6>
                    <hr>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="BodyTemperature">Body Temperature (°F)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-thermometer-half"></i></span>
                            </div>
                            <input type="text" class="form-control" id="BodyTemperature" placeholder="e.g. 98.6" >
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="HeartRate">Heart Rate (bpm)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-heartbeat"></i></span>
                            </div>
                            <input type="text" class="form-control" id="HeartRate" placeholder="e.g. 72">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="BloodPressure">Blood Pressure</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-tachometer-alt"></i></span>
                            </div>
                            <input type="text" class="form-control" id="BloodPressure" placeholder="e.g. 120/80">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="RespiratoryRate">Respiratory Rate</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-wind"></i></span>
                            </div>
                            <input type="text" class="form-control" id="RespiratoryRate" placeholder="Breaths per minute">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="OxygenSaturation">Oxygen Saturation (%)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-percentage"></i></span>
                            </div>
                            <input type="text" class="form-control" id="OxygenSaturation" placeholder="e.g. 98">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Anthropometric Measurements -->
            <div class="row mt-3">
                <div class="col-12">
                    <h6 class="section-title">Anthropometric Measurements</h6>
                    <hr>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Height">Height (cm)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-arrow-up"></i></span>
                            </div>
                            <input type="text" class="form-control" id="Height" placeholder="Height in cm">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Weight">Weight (kg)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-weight"></i></span>
                            </div>
                            <input type="text" class="form-control" id="Weight" placeholder="Weight in kg">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="BMI">BMI</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-calculator"></i></span>
                            </div>
                            <input type="text" class="form-control" id="BMI" placeholder="BMI">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notes Section -->
            <div class="row mt-3">
                <div class="col-12">
                    <div class="form-group">
                        <label for="Notes">Clinical Notes</label>
                        <textarea class="form-control" id="Notes" rows="3" placeholder="Enter clinical notes and observations"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnsubmit" class="btn btn-primary" form="AddEditDoctorConsultationForm">Submit</button>
        </div>
    </div>
</form>