                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- State -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="State">State</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fa fa-map"></i></span>
                                                </div>
                                                <select class="form-control" id="State">
