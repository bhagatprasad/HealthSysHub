                                            <label for="HospitalName">Hospital Name</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fa fa-hospital"></i></span>
                                                </div>
                                                <input type="text" class="form-control" id="HospitalName" placeholder="Enter hospital name" required>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Hospital Code -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="HospitalCode">Hospital Code</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fa fa-code"></i></span>
                                                </div>
                                                <input type="text" class="form-control" id="HospitalCode" placeholder="Enter hospital code">
                                            </div>
                                        </div>
                                    </div>
                                </div>

