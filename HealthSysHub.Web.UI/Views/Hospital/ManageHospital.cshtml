@{
    ViewData["Title"] = "Admn Area";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <div class="d-flex align-items-center flex-grow-1">
                    <img src="https://www.apollohospitals.com/hyderabad/wp-content/themes/apollo/assets-v3/images/logo.svg" alt="Hospital Logo" style="width: 50px; height: 50px; margin-right: 10px;">
                    <div class="text-center flex-grow-1">
                        <h5 class="mb-0">Hospital Name</h5><br />
                        <small class="text-muted">Registration Number: 123456</small>
                    </div>
                </div>
                <img src="https://cdn.who.int/media/images/default-source/infographics/who-emblem.png?sfvrsn=877bb56a_2" alt="Medical Emblem" style="width: 50px; height: 50px;">
            </div>
            <div class="card-body">
                <form id="AddEditHospitalForm">
