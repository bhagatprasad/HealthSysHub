@{
    ViewData["Title"] = "Admn Area";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <div class="row col-xl-12">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="searchInput">Search</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-search"></i></span>
                                </div>
                                <input type="text" class="form-control" id="searchInput" placeholder="Search..." required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="startDate">Start Date</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                                <input type="date" class="form-control" id="startDate" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="endDate">End Date</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                                <input type="date" class="form-control" id="endDate" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-primary form-control" style="margin-top: 28px;" id="searchButton">Search</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="card" style="border-top:none !important;">
                    <partial name="~/Views/Shared/_gridHeaderPartial.cshtml" />
                    <div class="card-body card-body-padding">
                        <div id="DoctorAppointmentGrid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_insertOrUpdateDoctorAppointmentPartial.cshtml" />
    </div>
</div>
<style type="text/css">
    .sidebar {
        position: fixed;
        top: 0;
        right: -60%; /* Initially hidden */
        width: 60%; /* Set the width to 60% */
        height: 100%;
        background-color: white;
        transition: right 0.4s ease;
        box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
        z-index: 1050;
        display: flex;
        flex-direction: column;
    }

        .sidebar.show {
            right: 0; /* When shown, set right to 0 */
        }

</style>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/DoctorDashboardController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new DoctorDashboardController();
        ctrl.init();
    });
</script>