<form id="AddEditMedicineForm">
    <div class="sidebar" id="sidebar">
        <div class="modal-header">
            <h5 class="modal-title">Add/Edit Medicine</h5>
            <button type="button" class="close" id="closeSidebar" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <!-- Medicine Name -->
            <div class="form-group">
                <label for="MedicineName">Medicine Name</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-medkit"></i></span>
                    </div>
                    <input type="text" class="form-control" id="MedicineName" placeholder="Enter medicine name" required>
                </div>
            </div>

            <!-- Generic Name -->
            <div class="form-group">
                <label for="GenericName">Generic Name</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-flask"></i></span>
                    </div>
                    <input type="text" class="form-control" id="GenericName" placeholder="Enter generic name">
                </div>
            </div>

            <!-- Dosage Form -->
            <div class="form-group">
                <label for="DosageForm">Dosage Form</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-tint"></i></span>
                    </div>
                    <input type="text" class="form-control" id="DosageForm" placeholder="Enter dosage form">
                </div>
            </div>

            <!-- Strength -->
            <div class="form-group">
                <label for="Strength">Strength</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-bolt"></i></span>
                    </div>
                    <input type="text" class="form-control" id="Strength" placeholder="Enter strength">
                </div>
            </div>

            <!-- Manufacturer -->
            <div class="form-group">
                <label for="Manufacturer">Manufacturer</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-industry"></i></span>
                    </div>
                    <input type="text" class="form-control" id="Manufacturer" placeholder="Enter manufacturer">
                </div>
            </div>

            <!-- Batch Number -->
            <div class="form-group">
                <label for="BatchNumber">Batch Number</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-barcode"></i></span>
                    </div>
                    <input type="text" class="form-control" id="BatchNumber" placeholder="Enter batch number">
                </div>
            </div>

            <!-- Expiry Date -->
            <div class="form-group">
                <label for="ExpiryDate">Expiry Date</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                    </div>
                    <input type="date" class="form-control" id="ExpiryDate">
                </div>
            </div>

            <!-- Price Per Unit -->
            <div class="form-group">
                <label for="PricePerUnit">Price Per Unit</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-dollar"></i></span>
                    </div>
                    <input type="number" step="0.01" class="form-control" id="PricePerUnit" placeholder="Enter price per unit">
                </div>
            </div>

            <!-- Stock Quantity -->
            <div class="form-group">
                <label for="StockQuantity">Stock Quantity</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-cubes"></i></span>
                    </div>
                    <input type="number" class="form-control" id="StockQuantity" placeholder="Enter stock quantity">
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnsubmit" class="btn btn-primary" form="AddEditMedicineForm">Submit</button>
        </div>
    </div>
</form>